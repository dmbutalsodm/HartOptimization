
<div class="machinecard-holder columns">
    {{#each this.machines}}
        <div class="machinecard column">
            <img style="width:40%"  src="/images/machine.png" />
            <span style="text-align: center;">{{attributes.name}}</span>
            <span style="text-align: center; font-size: 10px">ID: {{id}}</span>
            <a class="button is-info" href="machines/{{id}}/tools">Tools</a>
        </div>
    {{/each}}
</div>

<style>
    .machinecard {
        display:flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 1px solid black;
        border-radius: 5px;
        margin: 3px;
    }

    .machinecard-holder {
        justify-content: center;
    }
</style>